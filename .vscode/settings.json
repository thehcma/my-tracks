{
  // Auto-save files to avoid "keep or undo" prompts
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  
  // Automatically use the version on disk when files change externally
  "files.useExperimentalFileWatcher": true,
  "files.refactoring.autoSave": true,
  "files.hotExit": "off",
  
  // Don't prompt for external changes, just reload
  "git.autoStash": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  
  // Terminal settings to prevent spawning too many terminals
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.hideOnStartup": "always",
  "terminal.integrated.tabs.hideCondition": "never",
  
  // Python-specific settings
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "chat.tools.terminal.autoApprove": {
    "uv": true,
    "git checkout": true,
    "git pull": true,
    "shellcheck": true
  }
}
