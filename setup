#!/bin/bash
# Setup script for OwnTracks Django backend

set -e  # Exit on error

echo "================================================"
echo "OwnTracks Django Backend - Setup Script"
echo "================================================"
echo ""

# Check if Python 3.14+ is available
echo "Checking Python version..."
if command -v python3 &> /dev/null; then
    PYTHON_VERSION=$(python3 --version | cut -d' ' -f2)
    PYTHON_MAJOR=$(echo "$PYTHON_VERSION" | cut -d'.' -f1)
    PYTHON_MINOR=$(echo "$PYTHON_VERSION" | cut -d'.' -f2)
    
    if [ "$PYTHON_MAJOR" -eq 3 ] && [ "$PYTHON_MINOR" -ge 14 ]; then
        echo "âœ“ Found Python $PYTHON_VERSION"
    else
        echo "âŒ Python 3.14 or higher is required. Found $PYTHON_VERSION"
        exit 1
    fi
else
    echo "âŒ Python 3 not found. Please install Python 3.14 or higher."
    exit 1
fi

# Check if uv is installed
echo ""
echo "Checking for uv package manager..."
if ! command -v uv &> /dev/null; then
    echo "âš ï¸  uv not found. Installing uv..."
    curl -LsSf https://astral.sh/uv/install.sh | sh
    export PATH="$HOME/.cargo/bin:$PATH"
else
    echo "âœ“ uv is installed"
fi

echo ""
echo "ğŸ“ Creating project structure..."
mkdir -p mytracks
mkdir -p tracker/migrations

echo "âœ“ Directories created"

echo ""
echo "ğŸ“¦ Running installation script..."
python3 install.py

echo ""
echo "ğŸ”§ Creating virtual environment..."
uv venv

echo ""
echo "ğŸ“¥ Installing dependencies..."
source .venv/bin/activate
uv pip install -e .

echo ""
echo "ğŸ“ Setting up environment..."
if [ ! -f .env ]; then
    cp .env.example .env
    echo "âœ“ Created .env file from .env.example"
    echo "âš ï¸  Please edit .env and set your SECRET_KEY"
else
    echo "âœ“ .env file already exists"
fi

echo ""
echo "ğŸ—„ï¸  Running migrations..."
python manage.py migrate

echo ""
echo "ğŸ” Verifying setup..."
python3 verify_setup.py

echo ""
echo "âœ… Setup complete!"
echo ""
echo "Next steps:"
echo "1. Edit .env and set a secure SECRET_KEY"
echo "2. Create a superuser: python manage.py createsuperuser"
echo "3. Start the server: python manage.py runserver"
echo "4. Configure OwnTracks app to use: http://localhost:8000/api/locations/"
echo ""
echo "For production deployment, see DEPLOYMENT.md"
echo "================================================"

